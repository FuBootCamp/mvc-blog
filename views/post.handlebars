<div class="">

 <h2>{{loggedUser.name}}, add a comment to... </h2>
 <h2 class="postContentStyle">{{postUser.title}} </h2>
 <h3 class="postUserDateStyle"> Posted by {{postUser.user.name}} on {{format_date postUser.date_created}}</h3>
 <h3> Comments...</h3>


 {{#each comments as |comment| }}
    <p class="postContentStyle">{{comment.content}}</p>
    <p class="postUserDateStyle">by {{comment.user.name}} on {{format_date comment.date_created}}</p>
    {{!-- <p></p> --}}
{{/each}}

  <form class="addNewCommentForm" data-id="{{postUser.id}}"
    <label for="newComment">Comment:</label>
    <input class="commentStyle" type="text" id="newComment" />
    <button  type="submit" class ="buttonStyle" name="newComment">Add Comment</button>
  </form>
</div>

{{#if logged_in}}
    <script src="/js/comment.js"></script>
{{/if}}
